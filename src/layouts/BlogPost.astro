---
import Layout from './Layout.astro';

interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<Layout title={title}>
  <article class="blog-post">
    <div class="container">
      <div class="content-wrapper">
        <header class="post-header">
          <h1>{title}</h1>
          <p class="description">{description}</p>
        </header>
        <div class="content">
          <slot />
        </div>
        <div class="post-footer">
          <div class="share-buttons">
            <span>Share this tutorial:</span>
            <a href="#" class="share-button">Twitter</a>
            <a href="#" class="share-button">LinkedIn</a>
          </div>
        </div>
      </div>
    </div>
  </article>
</Layout>

<style>
  .blog-post {
    padding: 4rem 0;
    background: var(--light-bg);
  }

  .content-wrapper {
    max-width: 800px;
    margin: 0 auto;
    background: white;
    border-radius: 1rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    overflow: hidden;
  }

  .post-header {
    background: linear-gradient(to right, var(--gradient-from), var(--gradient-to));
    padding: 3rem 2rem;
    color: white;
  }

  h1 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .description {
    font-size: 1.1rem;
    opacity: 0.9;
  }

  .content {
    padding: 2rem;
    line-height: 1.7;
  }

  .content :global(h2) {
    font-size: 1.75rem;
    font-weight: 600;
    color: var(--text-color);
    margin: 2rem 0 1rem;
  }

  .content :global(p) {
    margin-bottom: 1.5rem;
    color: var(--text-color);
  }

  .content :global(ul), .content :global(ol) {
    margin: 1.5rem 0;
    padding-left: 1.5rem;
  }

  .content :global(li) {
    margin-bottom: 0.5rem;
  }

  .content :global(pre) {
    background: var(--light-bg);
    padding: 1.5rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin: 1.5rem 0;
    border: 1px solid var(--border-color);
  }

  .content :global(code) {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.9em;
  }

  .post-footer {
    padding: 2rem;
    border-top: 1px solid var(--border-color);
  }

  .share-buttons {
    display: flex;
    align-items: center;
    gap: 1rem;
    color: var(--text-light);
  }

  .share-button {
    color: var(--primary-color);
    text-decoration: none;
    font-weight: 500;
    padding: 0.5rem 1rem;
    border: 1px solid var(--border-color);
    border-radius: 0.5rem;
    transition: all 0.2s ease;
  }

  .share-button:hover {
    background: var(--light-bg);
    border-color: var(--primary-color);
  }

  @media (max-width: 768px) {
    .blog-post {
      padding: 2rem 0;
    }

    .post-header {
      padding: 2rem 1.5rem;
    }

    h1 {
      font-size: 2rem;
    }

    .content {
      padding: 1.5rem;
    }
  }
</style>